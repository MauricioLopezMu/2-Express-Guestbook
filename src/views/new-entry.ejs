<%- include('partials/header') %>

<div class="col-md-6 offset-md-3">
    <h2 class="text-center">Write a new Entry</h2>

    <form method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Entry a New Title" required>
        </div>

        <div class="form-group">
            <label for="body">Entry Text</label>
            <textarea class ="form-control" name="body" id="body" rows="3" required></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="post Entry" class="btn btn-primary">
        </div>
    </form>
</div>

<%- include('partials/footer') %>